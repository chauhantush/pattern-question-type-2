import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int i=1;
		while(i<=n){
			int j=1;
			int p=i+i-1;
			while(j<=n-i+1){
				System.out.print(p);
				p=p+2;
				j++;
			}
			j=1;
			p=1;
			while(j<=i-1){
			System.out.print(p);
			p=p+2;
			j++;
			}
			System.out.println();
			i++;
		}
	}
}
